<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer_Register"
    android:background="@drawable/backgroundbuyer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="426dp"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/bimageView"
                android:layout_width="421dp"
                android:layout_height="159dp"
                app:srcCompat="@android:drawable/ic_input_add" />
            <Button
                android:id="@+id/imagebuyer"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp" />

            <EditText
                android:id="@+id/bname"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/blname"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/bpnumber"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/bemail"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="30sp"/>


            <EditText
                android:id="@+id/bpassword"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/bradhar"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Adhaar Number"
                android:inputType="number"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/bpan"
                android:layout_width="399dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Pan Card"
                android:inputType="number"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bregister"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"/>


        </LinearLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>